{
  "name": "webhook-delivery-system",
  "version": "1.0.0",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "worker": "node src/workers/webhookWorker.js",
    "worker:dev": "nodemon src/workers/webhookWorker.js",
    "start": "node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "migrate": "node -e \"require('fs').readFileSync('migrations/001_initial.sql','utf8').split(';').forEach(s=>s.trim()&&console.log(s))\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "docker:build": "docker build -t webhook-delivery-system .",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.13.2",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "rate-limit-redis": "^4.3.1"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
